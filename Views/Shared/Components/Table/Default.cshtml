@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AngularApplication
@model Table

<div class="front-pane">
 
    <h4>@Model.Title</h4>
    <div>
        @if (Model.Searchable)
        {
            <partial name="Container" model="@Model.CreateSearch()" />
        }

    </div>
    <div>

        @if (Model == null)
        {
            <div class="text-danger">
                Модель не определена в предсталении TableViewComponent
            </div>
        }
        else
        {
            @if (Model.Columns == null)
            {
                <div class="text-danger">
                    Модель таблицы не определяет наименования колонок
                </div>
            }
            else
            {
                <table >
                    <thead>
                        <tr>
                            @foreach (string column in Model.Columns)
                            {



                                <th scope="col" style="padding: 2px">
                                    @column
                                </th>

                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model.Cells)
                        {
                            <tr>
                                @foreach (object cell in row)
                                {
                                    <td style="padding: 2px; word-break: break-all">@cell</td>
                                }
                            </tr>
                        }

                    </tbody>
                </table>
            }

        }
    </div>
    <div></div>
 
</div>