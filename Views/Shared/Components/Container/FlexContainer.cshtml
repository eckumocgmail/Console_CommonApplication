@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AngularApplication
@model Container
<div>
    @if (Model != null)
    {
        @if (Model.Horizontal)
        {
            <inline>
                @foreach (var child in Model.Children)
                {
                    <partial name="ContentBox" model="@child" />
                                      
                }
            </inline>
        }
        else
        {
            <incolumn>
                @foreach (var child in Model.Children)
                {
                    <partial name="ContentBox" model="@child" />                                                         
                }
            </incolumn>
        }
    }
</div>